<style>
    .theme-switcher {
        display: flex;
        gap: 0.089em;
    }

    .btn {
        width: 30px;
        height: 30px;
        border: solid 1px var(--border-color);
        border-radius: 0.5em;
        background: none;
        cursor: pointer;
        opacity: 0.5;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn.light,
    .btn.dark,
    .btn.system {
        fill: var(--foreground-color);
    }

    .btn:hover {
        border: solid 1px var(--foreground-color);
        opacity: 1;
    }

    .btn:hover svg,
    .btn:hover .light,
    .btn:hover .dark,
    .btn:hover .system {
        fill: var(--foreground-color);
        opacity: 1;
    }

    .btn.active {
        border: solid 1px var(--accent-color);
        opacity: 1;
    }

    .btn.active svg,
    .btn.active .light,
    .btn.active .dark,
    .btn.active .system {
        fill: var(--accent-color);
        opacity: 1;
    }


    .btn.active:hover {
        border: solid 1px var(--foreground-color);
        opacity: 1;
    }
</style>

<script is:inline>
    const preferredColorScheme = window.matchMedia("(prefers-color-scheme: dark)").matches
        ? "dark"
        : "light";

    // Set initial theme based on system preference
    const theme = (() => {
        const localStorageTheme = localStorage?.getItem("theme") ?? "";
        if (["dark", "light", "system"].includes(localStorageTheme)) {
            if (localStorageTheme === "system") {
                document.querySelector("html")?.setAttribute("data-theme", preferredColorScheme);
                return preferredColorScheme;
            }
            return localStorageTheme;
        } else {
            localStorage.setItem("theme", "system");
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
            document.querySelector("html")?.setAttribute("data-theme", "dark");
            return "dark";
        }
        document.querySelector("html")?.setAttribute("data-theme", "light");
        return "light";
    })();

    // Set initial active button based on stored theme setting
    const storedTheme = localStorage.getItem("theme") || "system";
    document.querySelectorAll(".btn").forEach((btn) => {
        btn.classList.remove("active");
        if (btn.classList.contains(`${storedTheme}`)) {
            btn.classList.add("active");
        }
    });

    // Handle theme change
    const handleThemeChange = (theme) => {
        localStorage.setItem("theme", theme);
        if (theme === "system") {
            document.querySelector("html")?.setAttribute("data-theme", preferredColorScheme);
        } else {
            document.querySelector("html")?.setAttribute("data-theme", theme);
        }

        document.querySelectorAll(".btn").forEach((btn) => {
            btn.classList.remove("active");
            if (btn.classList.contains(`${theme}`)) {
                btn.classList.add("active");
            }
        });
    };

    // Add click handlers for theme buttons
    document.querySelectorAll(".btn").forEach((btn) => {
        btn.addEventListener("click", () => {
            const theme = btn.classList.contains("light")
                ? "light"
                : btn.classList.contains("dark")
                    ? "dark"
                    : "system";
            handleThemeChange(theme);
        });
    });

    // Handle system preference change
    if (window.matchMedia) {
        window
            .matchMedia("(prefers-color-scheme: dark)")
            .addEventListener("change", () => {
                if (localStorage.getItem("theme") === "system") {
                    handleThemeChange("system");
                }
            });
    }
</script>