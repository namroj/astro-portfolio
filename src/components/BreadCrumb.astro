---
const { url, label } = Astro.props;
---

{
  url != "" ? (
    <>
      <a href={url}>{label}</a> <span class="separator"> > </span>{" "}
    </>
  ) : (
    <span>{label}</span>
  )
}

<style is:raw>
  a {
    font-size: 0.8em;

    @media screen and (min-width: 993px) {
      font-size: inherit;
    }
  }

  span {
    color: var(--accent-muted-color);
    font-size: 0.8em;

    &.separator {
      color: var(--accent-color);
    }

    @media screen and (min-width: 993px) {
      font-size: inherit;
    }
  }
</style>
