---
const currentPath = Astro.url.pathname;
---

<div class="navigation">
    <div class="dev">
        <a href="/">Jorman Espinoza</a>
    </div>
    <div class="links">
        <a href="/about" class={currentPath === "/about" ? "active" : ""}>
            About
        </a
        >
        <a href="/education" class={currentPath === "/education" ? "active" : ""}>
            Education
        </a>
        <a href="/experience" class={currentPath === "/experience" ? "active" : ""}>
            Experience
        </a>
        <a href="/projects" class={currentPath === "/projects" ? "active" : ""}>
            Projects
        </a>
        <a href="/blog"
           class={
               currentPath === "/blog"
               || currentPath.startsWith("/blog")
               || currentPath.startsWith("/tags")
                   ? "active" : ""
           }
        >
            Blog
        </a>
    </div>
</div>

<style>
    .navigation {
        display: flex;
        align-items: center;
        width: 100%;
        height: 60px;

        .dev a {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-end;
            font-size: 1.489em;
            font-weight: 700;
            color: var(--accent-color);
        }

        .links {
            justify-content: flex-end;
            gap: 1em;
            display: none;

            a {
                display: none;
                font-size: 1.489em;
                color: var(--accent-color-muted);

                &:first-of-type {
                    align-self: flex-start;

                }

                &:hover {
                    color: var(--accent-color);
                }

                &.active {
                    color: var(--foreground-color);
                }
            }
        }

        &.expanded {
            height: 100dvh;

            .dev a {
                position: absolute;
                top: 0.63em;
                left: 0.68em;
            }

            .links {
                display: unset;

                a {
                    display: flex;
                }
            }
        }

        @media screen and (min-width: 992px) {
            margin: 0 auto;
            padding: 0 15dvw;
            justify-content: space-between;

            .links {
                display: flex;

                a {
                    display: flex;
                    font-size: 1.025em
                }
            }
        }
    }
</style>
