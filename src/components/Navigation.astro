---
const currentPath = Astro.url.pathname;
---

<nav class="navigation">
    <div class="dev">
        <a href="/">Jorman Espinoza</a>
    </div>
    <div class="links">
        <a href="/about" class={currentPath === "/about" ? "active" : ""}>
            About
        </a
        >
        <a href="/education" class={currentPath === "/education" ? "active" : ""}>
            Education
        </a>
        <a href="/experience" class={currentPath === "/experience" ? "active" : ""}>
            Experience
        </a>
        <a href="/projects" class={currentPath === "/projects" ? "active" : ""}>
            Projects
        </a>
        <a href="/blog" class={currentPath === "/blog" || currentPath.startsWith("/blog/") ? "active" : ""}>
            Blog
        </a>
    </div>
</nav>

<style>
    .navigation {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        height: 60px;
    }

    .navigation .dev a {
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.489em;
        color: #8e4ace;
    }

    :global(.dark) .navigation .dev a {
        color: #8e4ace;
    }

    .navigation .links {
        justify-content: flex-end;
        gap: 1em;
        display: none;
        margin: 0;
    }

    .navigation .links a {
        display: flex;
    }

    .navigation .links a {
        text-decoration: none;
        font-size: 1em;
        color: #8e8e8e;
    }

    .navigation .links a:first-of-type {
        align-self: flex-start;
    }

    .navigation .links a:hover {
        background-color: transparent;
        color: black;
    }

    :global(.dark) .navigation .links a:hover {
        color: #e4e4e4;
    }

    .navigation .links a.active {
        color: #8e4ace;
    }

    :global(.dark) .navigation .links a.active {
        color: #8e4ace;
    }

    .navigation .expanded {
        display: unset;
    }

    @media screen and (min-width: 768px) {
        .navigation .links {
            display: flex;
        }
    }
</style>
