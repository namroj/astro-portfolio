---
const currentPath = Astro.url.pathname;
---

<div class="navigation">
    <div class="dev">
        <a href="/">Jorman Espinoza</a>
    </div>
    <div class="links">
        <a href="/about" class={currentPath === "/about" ? "active" : ""}>
            About
        </a
        >
        <a href="/education" class={currentPath === "/education" ? "active" : ""}>
            Education
        </a>
        <a href="/experience" class={currentPath === "/experience" ? "active" : ""}>
            Experience
        </a>
        <a href="/projects" class={currentPath === "/projects" ? "active" : ""}>
            Projects
        </a>
        <a href="/blog" class={currentPath === "/blog" || currentPath.startsWith("/blog/") ? "active" : ""}>
            Blog
        </a>
    </div>
</div>

<style>
    .navigation {
        display: flex;
        align-items: center;
        width: 100%;
        height: 60px;
    }

    .navigation .dev a {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-end;
        font-size: 1.489em;
        font-weight: 700;
        color: #8e4ace;
    }

    :global(.dark) .navigation .dev a {
        color: #8e4ace;
    }

    .navigation .links {
        justify-content: flex-end;
        gap: 1em;
        display: none;
    }

    .navigation .links a {
        display: none;
        font-size: 1.489em;
        color: #8e8e8e;
    }

    .navigation .links a:first-of-type {
        align-self: flex-start;
    }

    .navigation .links a:hover {
        color: #8e4ace;
    }

    :global(.dark) .navigation .links a:hover {
        color: #8e4ace;
    }

    .navigation .links a.active {
        color: #181a1b;
    }

    :global(.dark) .navigation .links a.active {
        color: #e4e4e4;
    }

    .navigation.expanded {
        height: 100dvh;
    }

    .navigation.expanded .links {
        display: unset;
    }

    .navigation.expanded .links a {
        display: flex;
    }

    .navigation.expanded .dev a {
        position: absolute;
        top: 0.75em;
    }

    .navigation .links {
        display: flex;
    }

    .navigation .links a {
        font-size: 1.1em
    }

    @media screen and (min-width: 992px) {
        .navigation {
            margin: 0 auto;
            padding: 0 15dvw;
            justify-content: space-between;
        }

        .navigation .links {
            display: flex;
        }

        .navigation .links a {
            display: flex;
            font-size: 1.1em
        }
    }
</style>
