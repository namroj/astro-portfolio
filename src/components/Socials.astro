---
import { getCollection } from "astro:content";
const socials = await getCollection("socials");
const items = socials.map((s) => s.data);
const { template } = Astro.props;
---

<style>
  .socials {
    display: flex;
    flex-direction: column;
    gap: var(--gap);

    &.icons {
      flex-direction: row;
      justify-content: flex-end;
      gap: calc(var(--gap) * 0.5);

      a {
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid var(--accent-muted-color);
        border-radius: 50%;
        padding: calc(var(--gap) * 0.35);
        background-color: var(--background-color);
        color: var(--accent-muted-color);

        svg {
          width: 22px;
          height: 22px;
          object-fit: cover;
        }

        &:hover {
          color: var(--accent-color);
          border: 1px solid var(--accent-color);
        }
      }
    }

    a {
      color: var(--accent-secondary-color);

      &:hover {
        color: var(--accent-color);
      }
    }
  }
</style>

<>
  {
    !template && (
      <ul class="socials">
        {items.map((social) => (
          <li>
            {social.network}:
            <a
              href={`${social.url}/${social.username}`}
              target="_blank"
              rel="noopener noreferrer"
              title={social.network}
              aria-label={social.network}
            >
              {`${social.url}/${social.username}`
                .replace("https://", "")
                .replace("www.", "")}
            </a>
          </li>
        ))}
      </ul>
    )
  }

