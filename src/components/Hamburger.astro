<div class="hamburger">
  <div class="line"></div>
  <div class="line"></div>
  <div class="line"></div>
</div>

<style>
  .hamburger {
    position: absolute;
    top: 0.35em;
    right: 0.75em;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 35px;
    height: 35px;
    cursor: pointer;
    z-index: 100;
    transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    will-change: transform;

    .line {
      width: 30px;
      height: 3px;
      background-color: var(--accent-color);
      transition:
        transform 0.4s cubic-bezier(0.68, -0.6, 0.32, 1.6),
        opacity 0.3s ease-in-out,
        width 0.3s ease-in-out,
        box-shadow 0.3s ease;
      position: absolute;
      border-radius: 4px;
      will-change: transform, opacity, width;
      opacity: 0.9;

      &:nth-of-type(1) {
        top: 10px;
        transform-origin: center;
      }

      &:nth-of-type(2) {
        top: 50%;
        transform: translateY(-50%);
      }

      &:nth-of-type(3) {
        bottom: 10px;
        transform-origin: center;
      }
    }

    &:hover .line {
      background-color: var(--accent-color);
      opacity: 1;
      box-shadow: 0 0 5px rgba(159, 91, 213, 0.5);
    }

    &.expanded {
      transform: rotate(90deg) scale(0.95);

      .line {
        background-color: var(--accent-color);
        opacity: 1;
        box-shadow: 0 0 8px rgba(159, 91, 213, 0.7);

        &:nth-of-type(1) {
          transform: translateY(6px) rotate(45deg);
          width: 28px;
        }

        &:nth-of-type(2) {
          opacity: 0;
          transform: translateY(-50%) translateX(10px) scale(0.2);
          width: 15px;
        }

        &:nth-of-type(3) {
          transform: translateY(-6px) rotate(-45deg);
          width: 28px;
        }
      }
    }

    @media screen and (min-width: 992px) {
      display: none;
    }
  }
</style>
