<div class="hamburger">
  <div class="line"></div>
  <div class="line"></div>
</div>

<style>
  .hamburger {
    position: absolute;
    top: 0.25em;
    right: 1em;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 35px;
    height: 35px;
    cursor: pointer;

    .line {
      width: 35px;
      height: 3px;
      background-color: #8e4ace;
      transition:
        transform 0.25s ease-in-out,
        opacity 0.1s ease-in-out;
      position: absolute;

      &:nth-of-type(1) {
        top: 12px;
      }

      &:nth-of-type(2) {
        bottom: 12px;
      }
    }

    &.expanded {
      .line {
        width: 30px;

        &:nth-of-type(1) {
          transform: rotate(45deg) translateY(6px);
        }

        &:nth-of-type(2) {
          transform: rotate(-45deg) translateY(-6px);
        }
      }
    }

    @media screen and (min-width: 992px) {
      display: none;
    }
  }
</style>
