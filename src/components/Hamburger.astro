  <div class="line"></div>
</div>

<style>
  .hamburger {
    position: absolute;
    top: 0.35em;
    right: 0.75em;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 35px;
    height: 35px;
    cursor: pointer;
    z-index: 100;
    transition: transform 0.3s ease-out;
    will-change: transform;

    .line {
      width: 30px;
      height: 3px;
      background-color: #8e4ace;
      transition:
        transform 0.4s cubic-bezier(0.68, -0.6, 0.32, 1.6),
        opacity 0.3s ease-in-out,
        width 0.3s ease-in-out;
      position: absolute;
      border-radius: 4px;
      will-change: transform, opacity, width;

      &:nth-of-type(1) {
        top: 10px;
        transform-origin: center;
      }

      &:nth-of-type(2) {
        top: 50%;
        transform: translateY(-50%);
        opacity: 1;
      }

      &:nth-of-type(3) {
        bottom: 10px;
        transform-origin: center;
      }
    }

    &:hover .line {
      background-color: #9f5bd5;
    }

    &.expanded {
      transform: rotate(180deg) scale(0.95);

      .line {
        &:nth-of-type(1) {
          transform: translateY(5px) rotate(45deg);
          width: 28px;
        }

        &:nth-of-type(2) {
          opacity: 0;
          transform: translateY(-50%) scale(0.5);
        }

        &:nth-of-type(3) {
          transform: translateY(-7px) rotate(-45deg);
          width: 28px;
        }
      }
    }

    @media screen and (min-width: 992px) {
      display: none;
    }
  }
</style>
